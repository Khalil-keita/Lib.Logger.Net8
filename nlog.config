<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="internal-nlog.txt">

	<targets async="true">
		<!-- Console Target -->
		<target name="console" xsi:type="ColoredConsole"
				layout="${longdate}|${level:uppercase=true}|${logger}|${message}${onexception:${newline}EXCEPTION: ${exception:format=ToString}}">
			<!-- Règles de coloration pour la console -->
			<highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
			<highlight-row condition="level == LogLevel.Error" foregroundColor="Red" backgroundColor="Black" />
			<highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" backgroundColor="Black" />
			<highlight-row condition="level == LogLevel.Info" foregroundColor="White" backgroundColor="Black" />
			<highlight-row condition="level == LogLevel.Debug" foregroundColor="Gray" backgroundColor="Black" />
			<highlight-row condition="level == LogLevel.Trace" foregroundColor="DarkGray" backgroundColor="Black" />
		</target>

		<!-- File Target -->
		<target name="file" xsi:type="File"
				fileName="logs/${shortdate}.log"
				layout="${longdate}|${level:uppercase=true}|${logger}|${message}${onexception:${newline}EXCEPTION: ${exception:format=ToString}}"
				archiveFileName="logs/archive/{#}.log"
				archiveEvery="Day"
				archiveNumbering="Rolling"
				maxArchiveFiles="30"
				concurrentWrites="true"
				keepFileOpen="false" />

		<!-- Error File Target -->
		<target name="errorFile" xsi:type="File"
				fileName="logs/errors-${shortdate}.log"
				layout="${longdate}|${level:uppercase=true}|${logger}|${message}${onexception:${newline}EXCEPTION: ${exception:format=ToString}}"
				archiveFileName="logs/archive/errors-{#}.log"
				archiveEvery="Day"
				maxArchiveFiles="60" />

		<!-- Structured JSON Logging -->
		<target name="jsonFile" xsi:type="File"
				fileName="logs/structured-${shortdate}.json"
				archiveFileName="logs/archive/structured-{#}.json"
				archiveEvery="Day"
				maxArchiveFiles="30">
			<layout xsi:type="JsonLayout">
				<attribute name="timestamp" layout="${longdate}" />
				<attribute name="level" layout="${level:uppercase=true}" />
				<attribute name="logger" layout="${logger}" />
				<attribute name="message" layout="${message}" />
				<attribute name="exception" layout="${exception:format=ToString}" />
				<attribute name="machineName" layout="${machinename}" />
				<attribute name="processId" layout="${processid}" />
				<attribute name="threadId" layout="${threadid}" />
			</layout>
		</target>
	</targets>

	<rules>
		<!-- Ignore Microsoft logs except Warning, Error, Fatal -->
		<logger name="Microsoft.*" minlevel="Warn" writeTo="file,errorFile" final="true" />

		<!-- All logs to console and file -->
		<logger name="*" minlevel="Debug" writeTo="console,file,jsonFile" />

		<!-- Error and fatal logs to separate error file -->
		<logger name="*" minlevel="Error" writeTo="errorFile" />
	</rules>
</nlog>